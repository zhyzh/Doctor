<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">#00ff00</item>
    </style>
    <style name="title.imageview">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:src">@drawable/left_arrow</item>
    </style>
    <style name="title.textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">24dp</item>
    </style>


    <style name="wh">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/bottomColor</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textColor">@drawable/textcolor</item>

    </style>
    <style name="left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">28dp</item>
    </style>
    <style name="right">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:src">@drawable/bg_next</item>
        <item name="android:layout_marginLeft">250dp</item>
    </style>
    <style name="corners">
        <item name="android:bottomLeftRadius">15dp</item>
        <item name="android:bottomRightRadius">15dp</item>
        <item name="android:topRightRadius">15dp</item>
        <item name="android:topLeftRadius">15dp</item>
    </style>
</resources>
