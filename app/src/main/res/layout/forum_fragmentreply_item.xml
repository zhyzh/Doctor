<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout style="@style/title">

        <ImageView style="@style/title.imageview" />

        <EditText
            style="@style/title.textview"
            android:text="聊天" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/forum_itemage_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/abcman" />

        <TextView
            android:id="@+id/forum_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/forum_itemage_2"
            android:layout_toRightOf="@+id/forum_itemage_2"
            android:clickable="true"
            android:text="一个人的梦想ok" />

        <TextView
            android:id="@+id/forum_teitime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
            android:text="30分钟前"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/forum_font" />
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/newsrep"
            android:background="@color/forum_backgru"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/forum_replyconobjie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="回复 ***：说的对"
        android:textSize="16sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/forum_contentitem"
            android:layout_weight="9"
            android:layout_width="0dp"
            style="@style/corners"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:text="回复我的评论：“我评论的内容”"
            android:background="#d2cfcf"
            />
    </LinearLayout>





</LinearLayout>