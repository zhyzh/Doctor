<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/title_color"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/iv_agricultural_tool_details_back"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/boss_unipay_icon_back"
			/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:text="农资站详情"
			android:textSize="20sp"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:orientation="vertical">

		<TextView
			android:id="@+id/tv_agr_tool_details_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="农资连锁超市老翟服务站"
			android:textColor="@android:color/black"
			android:textSize="20sp"
			/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:text="地址："
				android:textColor="@android:color/black"
				android:textSize="10sp"
				/>

			<TextView
				android:id="@+id/tv_agr_tool_details_address"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="苏州市吴中区新华路5号"
				android:textSize="15sp"

				/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:text="主营项目："
				android:textColor="@android:color/black"
				android:textSize="10sp"
				/>

			<TextView
				android:id="@+id/tv_agr_tool_details_product"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="农药、化肥、种子、薄膜"
				android:textSize="15sp"
				/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:text="联系人："
				android:textColor="@android:color/black"
				android:textSize="10sp"
				/>

			<TextView
				android:id="@+id/tv_agr_tool_details_host"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="老翟"
				android:textSize="15sp"
				/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:text="联系电话:"
				android:textColor="@android:color/black"
				android:textSize="10sp"
				/>

			<TextView
				android:id="@+id/tv_agr_tool_details_phone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="13123235656"
				android:textSize="15sp"
				/>
		</LinearLayout>

	</LinearLayout>

</LinearLayout>
