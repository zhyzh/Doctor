<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/backima" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/image1"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/abcman" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image1"
            android:layout_centerInParent="true"
            android:textColor="#fcf9f9"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/image2"
            android:text="昵称："
            android:textColor="#000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image1"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="130dp"
            android:layout_toRightOf="@id/image2"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/heart"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加关注" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image1"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/text1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/contract_"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发消息" />
        </LinearLayout>

        <TextView
            android:id="@+id/forum_damuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image2"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@+id/text1"
            android:text="张三"
            android:textColor="#000"
            android:textSize="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/forum_usertei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onclickDemand">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="他的帖子"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/forum_teinum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="230dp"
            android:text="20" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/bg_next" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forum_usertei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onclickDemand">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="他的关注"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/forum_teinum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="230dp"
            android:text="20" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/bg_next" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forum_usertei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onclickDemand">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="他的收藏"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/forum_teinum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="230dp"
            android:text="20" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/bg_next" />
    </LinearLayout>

</LinearLayout>
